<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_parent_lay_for_landing"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rel_lay_recy_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        >



        <TextView
            android:id="@+id/tv_farm_name_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_toRightOf="@id/rounded_test_for_verify"
            android:fontFamily="@font/yrsa_medium"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:drawablePadding="@dimen/_2sdp"
            android:id="@+id/add_for_verify_farm"
            android:layout_toRightOf="@id/rounded_test_for_verify"
            android:layout_below="@id/tv_farm_name_verify"
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textColor="#696969"
            android:text=""/>



<View
    android:layout_marginTop="@dimen/_5sdp"
    android:id="@+id/line_aftr_add"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#000000"
    android:layout_toRightOf="@id/rounded_test_for_verify"
    android:layout_below="@id/add_for_verify_farm"
/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rounded_test_for_verify"
            android:background="@drawable/rounded_lay_for_farmer_profile"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:gravity="center"
            android:src="@drawable/ic_person_light_grey_24dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_1sdp"
            android:elevation="@dimen/_1sdp"
            />

        <!--<TextView
            android:id="@+id/rounded_test_for_verify"
            android:background="@drawable/rounded_lay_for_farmer_profile"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:text="S"
            android:gravity="center"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:elevation="@dimen/_1sdp"
            android:textSize="@dimen/_30ssp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_below="@id/line_aftr_add"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:id="@+id/linear_call_layout"
            >
            <TextView
                android:id="@+id/tvfarmername_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/ic_person_black_18dp"
                android:drawablePadding="@dimen/_3sdp"
                android:fontFamily="@font/roboto_light"
                android:text=""
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp" />

            <ImageView

                android:id="@+id/callicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/ic_call_green_800_24dp" />
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

