            <RelativeLayout
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/rating_farmer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_bg_for_show_data"
                    android:fontFamily="@font/anaheim"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_farmer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="Rating"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:id="@+id/show_data_farm_pet_name"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView2"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_my_activities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f1f1f1">

                        <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                            android:id="@+id/my_activities_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Activities"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:id="@+id/tv_total_count"/>

                        <View
                            android:id="@+id/activity_line"
                            android:layout_width="match_parent"
                            android:layout_height=".9dp"
                            android:layout_below="@id/my_activities_label"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#c6c6c6" />

                        <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                            android:id="@+id/my_activities_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/activity_line"
                            android:layout_margin="10dp"
                            android:text="VIEW ACTIVITIES"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_view_soil_health_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f1f1f1">

                        <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                            android:id="@+id/view_soil_health_card_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Soil Health Card"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:id="@+id/soil_health_card_status"/>

                        <View
                            android:id="@+id/soil_health_card_line"
                            android:layout_width="match_parent"
                            android:layout_height=".9dp"
                            android:layout_below="@id/view_soil_health_card_label"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#c6c6c6" />

                        <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                            android:id="@+id/view_soil_health_card_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/view_soil_health_card_label"
                            android:layout_margin="10dp"
                            android:text="VIEW SOIL HEALTH CARD"
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

