                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f1f1f1">

                        <LinearLayout
                            android:id="@+id/linear_crop_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_margin="10dp"
                                android:id="@+id/crop_name_label"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text="Crop Name :"
                                android:textSize="16sp"
                                android:drawablePadding="@dimen/_2sdp"
                                android:textColor="@color/black"
                                android:drawableLeft="@drawable/ic_local_florist_black_18dp"/>

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="10dp"
                                android:id="@+id/tv_crop"/>

                        </LinearLayout>

                        <View
                            android:id="@+id/view_crop"
                            android:layout_width="match_parent"
                            android:layout_height=".8dp"
                            android:layout_below="@id/linear_crop_name"
                            android:background="#c6c6c6" />


                        <LinearLayout
                            android:id="@+id/linear_task_pending"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view_crop"
                            android:weightSum="1">

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_margin="10dp"
                                android:id="@+id/label_task_pending"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_timer_black_18dp"
                                android:text="Task Pending :"
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_2sdp"
                                android:textSize="16sp"
                                android:layout_weight=".5"/>

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="10dp"
                                android:id="@+id/tv_pending"
                                />

                        </LinearLayout>

                        <View
                            android:id="@+id/view_task_pending"
                            android:layout_width="match_parent"
                            android:layout_height=".8dp"
                            android:layout_below="@id/linear_task_pending"
                            android:background="#c6c6c6" />

                        <LinearLayout
                            android:layout_below="@id/view_task_pending"
                            android:id="@+id/linear_task_completed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_margin="10dp"
                                android:id="@+id/label_task_completed"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/view_task_pending"
                                android:text="Task Completed :"
                                android:drawablePadding="@dimen/_2sdp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:drawableLeft="@drawable/ic_alarm_on_black_18dp"/>

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="10dp"
                                android:id="@+id/tv_completed"/>
                        </LinearLayout>
                        <View
                            android:id="@+id/view_task_completed"
                            android:layout_width="match_parent"
                            android:layout_height=".8dp"
                            android:layout_below="@id/linear_task_completed"
                            android:background="#c6c6c6" />
                        <LinearLayout
                            android:id="@+id/linear_sowing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view_task_completed"
                            android:weightSum="1">

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_margin="10dp"
                                android:id="@+id/label_task_sowing"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/view_task_pending"
                                android:text="Sowing Date :"
                                android:drawablePadding="@dimen/_2sdp"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:drawableLeft="@drawable/ic_insert_invitation_black_18dp"
                                android:layout_weight=".5"/>
                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text="dd-mm-yyyy"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="10dp"
                                android:id="@+id/tv_sowing_date"/>
                        </LinearLayout>
                        <View
                            android:id="@+id/view_task_sowing"
                            android:layout_width="match_parent"
                            android:layout_height=".8dp"
                            android:layout_below="@id/linear_sowing"
                            android:background="#c6c6c6" />
                        <LinearLayout
                            android:id="@+id/linear_harvesting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_below="@id/view_task_sowing"
                            android:weightSum="1">

                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_margin="10dp"
                                android:drawableLeft="@drawable/ic_event_available_black_18dp"
                                android:id="@+id/label_task_harvesting"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/view_task_pending"
                                android:text="Date of Harvest :"
                                android:textColor="@color/black"
                                android:drawablePadding="@dimen/_2sdp"
                                android:textSize="16sp"
                                android:layout_weight=".5"/>
                            <sss.spade.spadei.inspectorspade.TypeFacedTextView.TypefacedTextView
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text="dd-mm-yyyy"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:id="@+id/tv_harvesting_date"
                                android:layout_margin="10dp"/>
                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
