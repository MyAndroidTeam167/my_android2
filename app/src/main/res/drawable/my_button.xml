<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#21a329" />
            <gradient android:angle="-90" android:startColor="#50a61f" android:endColor="#7cab24"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#26ff38" />
            <solid android:color="#7dff51"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#21a329" />
            <gradient android:angle="-90" android:startColor="#50a61f" android:endColor="#7cab24" />
        </shape>
    </item>
</selector>